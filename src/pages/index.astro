  height: 350px; 
  width: 350px; 
  position: fixed; 
  right: 10px; 
  bottom: 10px; 
  z-index: 102; 
  background-repeat:no-repeat; 
  background-position: center; 
  background-size: contain ;
  background-image: url('https://limbuscompany.wiki.gg/images/LCB_Sinner_Hong_Lu_Idle_Animation.gif');
}

.hongparent:hover {
  position: fixed;
  right: 10px; 
  bottom: 10px; 
  z-index: 102; 
  height: 800px; 
  width: 1000px; 
  background-image: url('https://limbuscompany.wiki.gg/images/LCB_Sinner_Hong_Lu_Skill_3.gif')
}

.glow {
  font-size: 80px;
  color: var(--color-accent);
  text-align: center;
  -webkit-animation: glow 1s ease-in-out infinite alternate;
  -moz-animation: glow 1s ease-in-out infinite alternate;
  animation: glow 1s ease-in-out infinite alternate;
}

.waviy {
  position: relative;
  padding: 2rem;
  font-weight: bolder;
}
.waviy span {
  position: relative;
  display: inline-block;
  font-size: 80px;
  color: var(--color-accent);
  text-transform: uppercase;
  animation: flip 2s infinite;
  animation-delay: calc(.2s * var(--i))
}
@keyframes flip {
  0%,80% {
    transform: rotateY(360deg) 
  }
}

